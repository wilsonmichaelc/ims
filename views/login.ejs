<!-- views/login.ejs -->
<!doctype html>
<html>
<head>
	<title>IMS</title>
	<% include partials/css %> <!-- load css -->
	<style>
		body 		{ padding-top:80px; }
	</style>
</head>
<body>
  <div class="container">
    <div class="col-sm-6 col-sm-offset-3">
      <h1><span class="fa fa-sign-in"></span> Login</h1>

      <!-- show any messages that come back with authentication -->
      <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
      <% } %>

      <!-- LOGIN FORM -->
      <form action="/login" method="post">
        <div class="form-group">
          <label>Email</label>
          <input type="text" class="form-control" name="email">
        </div>

        <div class="form-group">
          <label>Password</label>
          <input type="password" class="form-control" name="password">
        </div>

        <div class="form-group">
          <!-- <label for="remember">Remember Me</label>
          <input type="checkbox" class="form-control" name="remember" checked> -->
        </div>
				<div class="form-group">
	        <input type="submit" class="btn btn-primary btn-lg pull-right" value="Login">
				</div>
      </form>

      <br /><br /><hr>

      <div>
				Need an account? <a href="/signup">Signup</a>
			</div>
    </div>
  </div>
	<% include partials/js %> <!-- load js -->
</body>
</html>
